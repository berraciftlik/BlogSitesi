@using Travel_Project.Models.Siniflar
@model List<Blog>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table-bordered" style="height:400px; width:800px">
	<tr>
		<th>ID</th>
		<th>BAŞLIK</th>
		<th>SİL</th>
		<th>GÜNCELLE</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.ID</td>
			<td>@x.Baslik</td>
			<td><a href="/Admin/BlogSil/@x.ID" class="btn btn-warning">SİL</a></td>
			<td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">GÜNCELLE</a></td>

		</tr>
	}

</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary" style="margin-top:20px;">Yeni Blog Ekle</a>